{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "esnext",
        "lib": [
            "es2017",
            "dom",
            "dom.iterable",
            "esnext.asynciterable",
            "webworker"
        ],
        "module": "commonjs",
        "strictNullChecks": false,
        "jsx": "react",
        "jsxFactory": "h",
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "typescript-lit-html-plugin",
                "tags": [
                    "html",
                    "svg",
                    "raw"
                ]
            }
        ],
        "emitBOM": true,
        "charset": "utf8",
        "outDir": "build",
    },
    "exclude": [
        "bin",
        "lib"
    ],
    "compileOnSave": true
}